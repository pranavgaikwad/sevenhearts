<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_menu_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activities.MainActivity">

    <at.markushi.ui.CircleButton
        android:id="@+id/button_play_game"
        android:layout_width="72dip"
        android:layout_height="72dip"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_play"
        app:cb_color="#FFdd00"
        app:cb_pressedRingWidth="8dip" />

    <LinearLayout
        android:id="@+id/main_activity_cont1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#90000000"
        android:orientation="horizontal"
        android:visibility="invisible">

        <EditText
            android:id="@+id/edit_text_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Player1"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/button_player_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/edit_text_player_name"
            android:layout_toEndOf="@+id/edit_text_player_name"
            android:layout_toRightOf="@+id/edit_text_player_name"
            android:text="OK" />

    </LinearLayout>

    <TextView
        android:id="@+id/main_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="Badam Satti"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="60dp" />

    <TextView
        android:id="@+id/play_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@+id/button_play_game"
        android:layout_toRightOf="@+id/button_play_game"
        android:text="Play"
        android:textColor="@android:color/white"
        android:textSize="24dp" />


</RelativeLayout>
