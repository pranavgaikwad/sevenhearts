<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_menu_bg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ui.activities.MainActivity">

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/space"
        android:layout_alignStart="@+id/space"
        android:layout_centerVertical="true"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_play_game"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bg_main_play_button"
            android:drawableLeft="@drawable/selector_icon_play_button"
            android:padding="8dp"
            android:text="@string/text_play_button"
            android:textColor="@drawable/selector_main_button_text" />

        <Button
            android:id="@+id/button_game_stats"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_bg_main_play_button"
            android:drawableLeft="@drawable/selector_icon_stats_button"
            android:padding="8dp"
            android:text="@string/text_stats_button"
            android:textColor="@drawable/selector_main_button_text" />

        <Button
            android:id="@+id/button_settings"
            android:layout_width="128dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/selector_bg_main_play_button"
            android:drawableLeft="@drawable/selector_icon_stats_button"
            android:padding="8dp"
            android:text="@string/text_stats_button"
            android:textColor="@drawable/selector_main_button_text"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/toggle_button_volume"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:background="@drawable/shape_button_background_red"
                android:padding="12dp"
                android:src="@drawable/ic_volume" />

            <ImageView
                android:id="@+id/toggle_button_vibrate"
                android:layout_width="58dp"
                android:layout_height="58dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/shape_button_background_red"
                android:gravity="center"
                android:padding="12dp"
                android:src="@drawable/ic_vibrate" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text_view_main_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/space"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/space"
        android:gravity="center"
        android:textColor="#e2e2e2"
        android:textSize="80dp" />

</RelativeLayout>
